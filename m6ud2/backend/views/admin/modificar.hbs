<div class="container" style="margin-top: 100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar una novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label for="">TÃ­tulo</label>
                    <input type="text" class="form-control" name="titulo"
                    value="{{novedad.titulo}}">
                </div>
                 <div class="form-group">
                    <label for="">Link</label>
                     <textarea name="link" class="form-control">{{novedad.link}}</textarea>
                </div>
               
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}

        </div>
            
    </div>
</div>